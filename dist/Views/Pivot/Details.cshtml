@model WGRanch.ViewModels.PivotDetailsViewModel

@{
	ViewBag.Title = "Pivot Details";
}

<fieldset>
	<legend>Pivot Details</legend>
	<h3>
		Pivot #@Model.Pivot.PivotNumber
	</h3>
	@Html.LabelFor(m => m.Pivot.Acres)
	@Html.DisplayFor(m => m.Pivot.Acres)
	<br />
	@Html.LabelFor(m => m.Pivot.Latitude)
	@Html.DisplayFor(m => m.Pivot.Latitude)
	<br />
	@Html.LabelFor(m => m.Pivot.Longitude)
	@Html.DisplayFor(m => m.Pivot.Longitude)
	<br />
	<hr />
	<h4>Attachments
	</h4>
	<ul id="Attachments">
		@foreach (var attachment in Model.Attachments)
	{
			<li>
				<a target="_blank" href="@Url.AttachmentUrlShorted(attachment)">@attachment.OriginalFileName</a>
				<form method="POST" action="@Url.Action("RemoveAttachment", "Pivot")">
					@Html.Hidden("PivotId", Model.Pivot.Id)
					@Html.Hidden("AttachmentId", attachment.Id)
					<button type="submit" class="btn btn-mini btn-danger">X</button>
				</form>
			</li>
	}
	</ul>
	@using (Html.BeginForm("UploadAttachment", "Pivot", FormMethod.Post, new { enctype = "multipart/form-data" }))
 {
		@Html.Hidden("PivotId", Model.Pivot.Id)
		<input type="file" multiple="multiple" name="files" />
		<br />
		<button class="button" type="submit">
			Attach File(s)
		</button>
 }
</fieldset>

@section Styles
{
	<style type="text/css">
		#Attachments
		{
			list-style: none;
			padding-left: 10px;
		}

			#Attachments li
			{
			}

				#Attachments li form
				{
					display: inline-block;
					margin: 0px;
					padding: 0px;
				}

		fieldset
		{
			display: inline-block;
		}

		label
		{
			display: inline-block;
			font-weight: bold;
			margin-top: 5px;
			margin-left: 10px;
		}

		h3
		{
			padding: 10px 0px;
		}

		h4
		{
			padding-top: 10px;
		}
	</style>
}
