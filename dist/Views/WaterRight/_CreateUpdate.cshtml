@using WGRanch.Models
@model WaterRight

@{
	var statuses = new[]
		{
			new Status { Text = "", Value = "" },
			new Status { Text = "CER", Value = "CER" },
			new Status { Text = "VST", Value = "VST" }, 
			new Status { Text = "PER", Value = "PER" }, 
			new Status { Text = "EXP", Value = "EXP" }, 
			new Status { Text = "WDR", Value = "WDR" }, 
			new Status { Text = "DEC", Value = "DEC" }, 
			new Status { Text = "RFP", Value = "RFP" }
		};

	var typesOfUse = new[]
		{
			new TypeOfUse { Text = "", Value = "" },
			new TypeOfUse { Text = "STK", Value = "STK" },
			new TypeOfUse { Text = "IRR", Value = "IRR" }, 
			new TypeOfUse { Text = "IND", Value = "IND" }, 
			new TypeOfUse { Text = "PWR", Value = "PWR" }
		};
}

@Html.HiddenFor(m => m.Id)
<div class="control-group">
	@Html.LabelFor(m => m.Basin, new { @class = "control-label" })
	<div class="controls">
		@Html.TextBoxFor(m => m.Basin)
	</div>
</div>
