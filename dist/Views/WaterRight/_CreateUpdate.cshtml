	@Html.LabelFor(m => m.DateOfCertificate, new { @class = "control-label" })
	<div class="controls">
		@Html.TextBox("DateOfCertificate", Model.DateOfCertificate.HasValue ? Model.DateOfCertificate.Value.ToString("MM/dd/yyyy") : "", new { @class = "datepicker" })
	</div>
</div>
<div class="control-group">
	@Html.LabelFor(m => m.Status, new { @class = "control-label" })
	<div class="controls">
		@Html.DropDownListFor(m => m.Status, new SelectList(statuses, "Value", "Text"))
