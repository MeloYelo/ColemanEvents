				@using (Html.BeginForm("WaterRightAttachments", "Batch", FormMethod.Post, new { enctype = "multipart/form-data" }))
	{
					<input type="file" id="files" name="files" multiple="multiple" />
					<input type="checkbox" id="IsPrimary" name="IsPrimary" value="true" />
					<label for="IsPrimary">
						Are Primary Attachments
					</label>
					<div class="form-actions">
						<button type="submit" class="btn btn-primary"><i class="icon-upload-alt"></i>upload</button>
					</div>
	}
