@{
	ViewBag.Title = "Batch Uploads";
}


<div class="row">
	<div class="span6">
		<div class="widget">
			<div class="widget-header">
				<h3>Water Rights
				</h3>
			</div>
			<div class="widget-content">

				@using (Html.BeginForm("WaterRights", "Batch", FormMethod.Post, new { enctype = "multipart/form-data" }))
	{
					<input type="file" id="file" name="file" />
					<div class="form-actions">
						<button type="submit" class="btn btn-primary"><i class="icon-upload-alt"></i>upload</button>
					</div>
	}
			</div>
		</div>
	</div>
	<div class="span6">
		<div class="widget">
			<div class="widget-header">
				<h3>Wells
				</h3>
			</div>
			<div class="widget-content">

				@using (Html.BeginForm("Wells", "Batch", FormMethod.Post, new { enctype = "multipart/form-data" }))
	{
					<input type="file" id="file" name="file" />
